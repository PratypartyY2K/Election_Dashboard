<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
  </style>
</head>
<body>
  <h1>Users</h1>

  <table id="users-table" class="display" style="width:100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Constituency</th>
      </tr>
    </thead>
    <tbody>
      <!-- Data will be inserted here dynamically -->
    </tbody>
  </table>

  <script>
    $(document).ready(function() {
      $('#users-table').DataTable({
        processing: true,
        serverSide: true,
        ajax: {
          url: '/users.json',
          dataSrc: 'data'
        },
       columns: [
          { data: 'name', type: 'string' },
          { data: 'gender', type: 'string' },
          { data: 'constituency_id', type: 'num' }
        ],
        pageLength: 10, // default page length
        lengthMenu: [[5, 10, 15], [5, 10, 15]], // dropdown options
        order: [[0, 'asc']],
      });
    });
  </script>
</body>
</html>
