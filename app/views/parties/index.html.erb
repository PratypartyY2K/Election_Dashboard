<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Party</title>
</head>
<body>
  <p> <%= link_to 'Return to Home Page', root_path %> </p>
  <h1> Party Table </h1>
  <h3> Press the <button id="search-button">Search</button> button to see results after entering filters </h3>

  <table id="parties-table" class="display" style="width:100%">
    <thead>
      <tr>
        <th>Party ID</th>
        <th>Party Name</th>
      </tr>
      <tr class="filters">
        <th><input type="text" id="party-id-search" placeholder="Search ID"></th>
        <th><input type="text" id="party-name-search" placeholder="Search Name"></th>
      </tr>
    </thead>
    <tbody>
      <!-- Data will be inserted here dynamically -->
    </tbody>
  </table>
  
  <script>
    $(document).ready(function() {
      console.log("First call");
      $( ":text" ).val('');
      const table = $('#parties-table').DataTable({
        orderCellsTop: true,
        pagingType: 'full_numbers',
        searchable: false,
        deferRender: true,
        processing: true,
        serverSide: true,
        regex: false,
        ajax: {
          url: '/parties.json',
          data: function(d) {
            // console.log(d);
            d.columns[0].search.value = $('#party-id-search').val();
            d.columns[1].search.value = $('#party-name-search').val();
          },
          dataSrc: function(json) {
            // console.log(json);
            json.recordsTotal = json.total_records;
            json.recordsFiltered = json.meta.total_count;
            return json.parties;
          },
          error: function(xhr, status, errr) {
            alert(status);
          },
        },
        columns: [
          { data: 'party_id' },
          { data: 'party' },
        ],
        pageLength: 10, // default page length
        lengthMenu: [[5, 10, 15], [5, 10, 15]], // dropdown options
        order: [[0, 'desc']]
      });
      // Hit enter to apply filter
      $('input[type=text]').keydown(function(e) {
        if (e.key === "Enter") {
          table.ajax.reload();
        }
      });
      // Handle search button click
      $('#search-button').on('click', function() {
        // console.log("Second call!");
        // console.log("Name: ", $('#party-name-search').val());
        // console.log("ID: ", $('#party-id-search').val());
        table.ajax.reload();
      });
      
      $('#parties-table_filter').hide();
    });
  </script>
</body>
</html>
