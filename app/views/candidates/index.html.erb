<head>
  <title>Candidates</title>
</head>
<body>
  <p> <%= link_to 'Return to Home Page', root_path %> </p>
  <p style="color: green"><%= notice %></p>
  <h1> Candidates Table </h1>
  <h2> Press the <button id="search-button">Search</button> button to see results after entering filters </h2>

  <table id="candidates-table" class="display" style="width:100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Gender</th>
      </tr>
      <tr class="filters">
        <th><input type="text" id="name-search" placeholder="Search Name"></th>
        <th><select id="gender-select">
          <option value="">All</option></select>
        </th>
      </tr>
    </thead>
    <tbody>
      <!-- Data will be inserted here dynamically -->
    </tbody>
  </table>
  
  <script>
    $(document).ready(function() {
      console.log("First call");
      $(":text").val('');
      const table = $('#candidates-table').DataTable({
        orderCellsTop: true,
        pagingType: 'full_numbers',
        searchable: false,
        deferRender: true,
        processing: true,
        serverSide: true,
        regex: false,
        ajax: {
          url: '/candidates.json',
          data: function(d) {
            console.log(d);
            d.columns[0].search.value = $('#name-search').val();
            d.columns[1].search.value = $('#gender-select').val();
          },
          dataSrc: function(json) {
            // console.log(json);
            json.recordsTotal = json.total_records;
            json.recordsFiltered = json.meta.total_count;
            return json.candidates;
          },
          error: function(xhr, status, errr) {
            alert(status);
          },
        },
        columns: [
          { data: 'candidate_name', render: function(data, type, row) { // Hyperlink to /candidates/:id
              return `<a href="/candidates/${row._id}">${data}</a>`; },
          },
          { data: 'sex' },
        ],
        pageLength: 10, // default page length
        lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]], // dropdown options
        initComplete: function () {
          // Fetch and populate gender options
          $.ajax({
            url: '/candidates/gender_options',
            method: 'GET',
            success: function(data) {
              const genderSelect = $('#gender-select');
              data.forEach(gender => {
                genderSelect.append(`<option value="${gender}">${gender}</option>`);
              });
            }, 
            error: function(xhr, status, errr) {
              alert(status);
            }
          });
        },
      });
      // Handle user pressed enter to filter data
      $('input[type=text]').keydown(function(e) {
        if (e.key === "Enter") {
          table.ajax.reload();
        }
      });
      // Apply filter after user changes gender dropdown
      $('#gender-select').change(function() {
        table.ajax.reload();
      })
      // Handle search button click
      $('#search-button').on('click', function() {
        // console.log("Second call!");
        // console.log("Name: ", $('#name-search').val());
        // console.log("Gender: ", $('#gender-select').val());
        table.ajax.reload();
      });
      
      $('#candidates-table_filter').hide();
    });
  </script>
</body>
</html>
